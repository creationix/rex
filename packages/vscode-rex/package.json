{
	"name": "rex-vscode",
	"displayName": "Rex",
	"description": "Rex language support for Visual Studio Code",
	"version": "0.2.1",
	"publisher": "creationix",
	"icon": "img/rex-icon-dark.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/creationix/rex",
		"directory": "packages/vscode-rex"
	},
	"main": "./dist/extension.js",
	"engines": {
		"vscode": "^1.75.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:markdown"
	],
	"contributes": {
		"languages": [
			{
				"id": "rex",
				"aliases": [
					"Rex Language",
					"rex"
				],
				"extensions": [
					".rex"
				],
				"configuration": "./language-configuration.json"
			},
			{
				"id": "rexc",
				"aliases": [
					"Rex Compact Encoding",
					"rexc"
				],
				"extensions": [
					".rexc"
				],
				"configuration": "./rexc-language-configuration.json"
			}
		],
		"semanticTokenTypes": [
			{
				"id": "objectKey",
				"description": "Object key in rexc encoding"
			},
			{
				"id": "indexData",
				"description": "Pointer array index data in rexc encoding"
			},
			{
				"id": "annotation",
				"superType": "decorator",
				"description": "Line-drawing annotations in rexc"
			}
		],
		"semanticTokenScopes": [
			{
				"scopes": {
					"objectKey": ["support.type.property-name"],
					"indexData": ["entity.other.attribute-name"],
					"annotation": ["entity.name.function.decorator"]
				}
			}
		],
		"grammars": [
			{
				"language": "rex",
				"scopeName": "source.rex",
				"path": "./syntaxes/rex.tmLanguage.json"
			},
			{
				"scopeName": "markdown.rex.codeblock",
				"path": "./syntaxes/rex-markdown.tmLanguage.json",
				"injectTo": [
					"text.html.markdown"
				],
				"embeddedLanguages": {
					"meta.embedded.block.rex": "rex"
				}
			},
			{
				"scopeName": "inline.rex.tagged-template",
				"path": "./syntaxes/rex-typescript.tmLanguage.json",
				"injectTo": [
					"source.ts",
					"source.tsx",
					"source.js",
					"source.jsx",
					"text.html.markdown"
				],
				"embeddedLanguages": {
					"meta.embedded.block.rex": "rex"
				}
			},
			{
				"language": "rexc",
				"scopeName": "source.rexc",
				"path": "./syntaxes/rexc.tmLanguage.json"
			},
			{
				"scopeName": "markdown.rexc.codeblock",
				"path": "./syntaxes/rexc-markdown.tmLanguage.json",
				"injectTo": [
					"text.html.markdown"
				],
				"embeddedLanguages": {
					"meta.embedded.block.rexc": "rexc"
				}
			},
			{
				"scopeName": "inline.rexc.tagged-template",
				"path": "./syntaxes/rexc-typescript.tmLanguage.json",
				"injectTo": [
					"source.ts",
					"source.tsx",
					"source.js",
					"source.jsx",
					"text.html.markdown"
				],
				"embeddedLanguages": {
					"meta.embedded.block.rexc": "rexc"
				}
			}
		]
	},
	"scripts": {
		"build": "bun build src/extension.ts --outfile dist/extension.js --external vscode --format cjs --target node",
		"package": "bun run build && bunx @vscode/vsce package --no-dependencies",
		"publish": "bun run build && bunx @vscode/vsce publish --no-dependencies"
	},
	"devDependencies": {
		"@types/vscode": "^1.75.0"
	},
	"private": true
}
