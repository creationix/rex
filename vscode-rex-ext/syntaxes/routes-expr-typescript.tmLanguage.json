{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"scopeName": "inline.rex.tagged-template",
	"injectionSelector": "L:source.js -comment, L:source.jsx -comment, L:source.ts -comment, L:source.tsx -comment, L:meta.embedded.block.typescript -comment, L:meta.embedded.block.javascript -comment",
	"patterns": [
		{
			"begin": "\\b(rex)\\s*(`)",
			"end": "(`)",
			"beginCaptures": {
				"1": { "name": "entity.name.function.tagged-template.ts" },
				"2": { "name": "punctuation.definition.string.template.begin.ts" }
			},
			"endCaptures": {
				"1": { "name": "punctuation.definition.string.template.end.ts" }
			},
			"contentName": "meta.embedded.block.rex",
			"patterns": [
				{
					"begin": "\\$\\{",
					"end": "\\}",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.template-expression.begin.ts"
						}
					},
					"endCaptures": {
						"0": { "name": "punctuation.definition.template-expression.end.ts" }
					},
					"contentName": "meta.template.expression.ts",
					"patterns": [{ "include": "source.ts" }]
				},
				{ "include": "source.rex" }
			]
		}
	]
}
